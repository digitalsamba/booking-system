# Backend environment variables
# Copy this file to .env and update with your values

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_HOST=localhost
DB_PORT=27017
DB_DATABASE=booking_system
DB_USERNAME=
DB_PASSWORD=

# JWT Authentication
JWT_SECRET=your-very-secure-jwt-secret-key
JWT_EXPIRY=86400

# CORS
CORS_ALLOWED_ORIGIN=*

# Email Configuration
MAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Booking System"

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,svg

# Digital Samba
DIGITAL_SAMBA_API_KEY=
DIGITAL_SAMBA_DOMAIN=